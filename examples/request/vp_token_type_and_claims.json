{
  "id": "example with selective disclosure",
  "input_descriptors": [
    {
      "id": "ID card with constraints",
      "format": {
        "di_vc": {
          "proof_type": [
            "DataIntegrityProof"
          ],
          "cryptosuite": [
            "eddsa-rdfc-2022"
          ]
        }
      },
      "constraints": {
        "limit_disclosure": "required",
        "fields": [
          {
            "path": [
              "$.type"
            ],
            "filter": {
              "type": "string",
              "pattern": "IDCardCredential"
            }
          },
          {
            "path": [
              "$.credentialSubject.given_name"
            ]
          },
          {
            "path": [
              "$.credentialSubject.family_name"
            ]
          },
          {
            "path": [
              "$.credentialSubject.birthdate"
            ]
          }
        ]
      }
    }
  ]
}